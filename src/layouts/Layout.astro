---
import { ClientRouter } from "astro:transitions";
import { Toaster } from "sonner";
import SeoHead from "../components/seo/SeoHead.astro";
import { _defaultDescription, _stateListFooter } from "../lib/app-logic";
import "sonner/dist/styles.css";
import "../styles/global.css";

interface Props {
	title: string;
	description?: string;
	image?: string;
	type?: "website" | "article";
	jsonLd?: Record<string, unknown>;
}

const {
	title,
	description = _defaultDescription,
	image,
	type,
	jsonLd,
} = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <SeoHead
            title={title}
            description={description}
            image={image}
            type={type}
            jsonLd={jsonLd}
        />
        <ClientRouter />
    </head>
    <body
        class="min-h-screen bg-white text-slate-900 overflow-x-hidden flex flex-col"
    >
        <nav
            class="sticky top-0 z-50 w-full border-b border-slate-200 bg-white/80 backdrop-blur-md"
        >
            <div
                class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8"
            >
                <div class="flex items-center gap-2">
                    <div
                        class="h-8 w-8 rounded-lg bg-blue-600 flex items-center justify-center text-white font-bold text-xl"
                    >
                        S
                    </div>
                    <a
                        href="/"
                        class="text-xl font-bold tracking-tight text-slate-900 font-serif"
                        >Lien<span class="text-blue-600">Sign</span></a
                    >
                </div>
                <div class="hidden md:flex items-center gap-8">
                    <a
                        href="/templates"
                        class="text-sm font-medium text-slate-600 hover:text-blue-600 transition-colors"
                        >Templates</a
                    >
                    <a
                        href="/my-info"
                        class="text-sm font-medium text-slate-600 hover:text-blue-600 transition-colors"
                        >My Info</a
                    >
                    <a
                        href="/history"
                        class="text-sm font-medium text-slate-600 hover:text-blue-600 transition-colors"
                        >History</a
                    >
                    <a
                        id="nav-get-started"
                        href="/wizard"
                        class="rounded-full bg-slate-900 px-5 py-2 text-sm font-semibold text-white hover:bg-slate-800 transition-all shadow-lg hover:shadow-blue-200"
                        >Lien Waiver Wizard</a
                    >
                </div>

                <!-- Mobile menu button -->
                <div class="flex items-center md:hidden">
                    <button
                        id="mobile-menu-button"
                        type="button"
                        class="inline-flex items-center justify-center rounded-md p-2 text-slate-400 hover:bg-slate-100 hover:text-slate-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500"
                        aria-controls="mobile-menu"
                        aria-expanded="false"
                    >
                        <span class="sr-only">Open main menu</span>
                        <!-- Icon when menu is closed -->
                        <svg
                            class="block h-6 w-6"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            aria-hidden="true"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                            ></path>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Mobile menu, show/hide based on menu state. -->
            <div class="hidden md:hidden" id="mobile-menu">
                <div
                    class="space-y-1 px-2 pt-2 pb-3 border-t border-slate-100 bg-white"
                >
                    <a
                        href="/templates"
                        class="block rounded-md px-3 py-2 text-base font-medium text-slate-700 hover:bg-slate-50 hover:text-blue-600"
                        >Templates</a
                    >
                    <a
                        href="/my-info"
                        class="block rounded-md px-3 py-2 text-base font-medium text-slate-700 hover:bg-slate-50 hover:text-blue-600"
                        >My Info</a
                    >
                    <a
                        href="/history"
                        class="block rounded-md px-3 py-2 text-base font-medium text-slate-700 hover:bg-slate-50 hover:text-blue-600"
                        >History</a
                    >
                    <a
                        id="mobile-nav-get-started"
                        href="/wizard"
                        class="mt-4 block rounded-full bg-blue-600 px-3 py-3 text-center text-base font-bold text-white shadow-lg shadow-blue-200 hover:bg-blue-500"
                        >Lien Waiver Wizard</a
                    >
                </div>
            </div>
        </nav>

        <script>
            function initNav() {
                const button = document.getElementById("mobile-menu-button");
                const menu = document.getElementById("mobile-menu");

                button?.addEventListener("click", () => {
                    if (button) {
                        const isExpanded =
                            button.getAttribute("aria-expanded") === "true";
                        button.setAttribute(
                            "aria-expanded",
                            String(!isExpanded),
                        );
                        menu?.classList.toggle("hidden");
                    }
                });
            }

            // Hook into Astro's View Transitions
            document.addEventListener("astro:page-load", initNav);
        </script>
        <main class="flex-1 flex flex-col">
            <slot />
        </main>
        <footer class="border-t border-slate-200 bg-slate-50 py-16">
            <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
                <div
                    class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center border-b border-slate-200 pb-12 mb-12"
                >
                    <div class="text-center md:text-left">
                        <div
                            class="flex items-center justify-center md:justify-start gap-2 mb-4"
                        >
                            <div
                                class="h-6 w-6 rounded bg-blue-600 flex items-center justify-center text-white font-bold text-sm"
                            >
                                S
                            </div>
                            <span
                                class="text-lg font-bold tracking-tight text-slate-900 font-serif"
                                >Lien<span class="text-blue-600">Sign</span
                                ></span
                            >
                        </div>
                        <p
                            class="text-xs text-slate-500 max-w-md mx-auto md:mx-0 leading-relaxed"
                        >
                            LienSign is a platform for generating construction
                            documents.
                            <strong
                                >LienSign is not a law firm and does not provide
                                legal advice.</strong
                            >
                            The use of this website or our templates does not create
                            an attorney-client relationship.
                        </p>
                    </div>
                    <div
                        class="flex flex-wrap justify-center md:justify-end gap-x-8 gap-y-4"
                    >
                        <a
                            href="/history"
                            class="text-sm font-medium text-slate-600 hover:text-blue-600 transition-colors"
                            >History</a
                        >
                        <a
                            href="/terms"
                            class="text-sm font-medium text-slate-600 hover:text-blue-600 transition-colors"
                            >Terms of Service</a
                        >
                        <a
                            href="/privacy"
                            class="text-sm font-medium text-slate-600 hover:text-blue-600 transition-colors"
                            >Privacy Policy</a
                        >
                    </div>
                </div>
                <div
                    class="flex flex-col md:flex-row justify-between items-center gap-4 border-t border-slate-100 pt-8"
                >
                    <p class="text-sm text-slate-500 text-center md:text-left">
                        Â© 2026 LienSign. Professional templates for {
                            _stateListFooter
                        }.
                    </p>
                    <div class="flex items-center gap-4 text-sm text-slate-500">
                        <span
                            >Made by <a
                                href="https://github.com/albertobadia"
                                class="font-semibold text-slate-900 hover:text-blue-600 transition-colors"
                                >Alberto .D Badia</a
                            ></span
                        >
                        <span class="text-slate-300">|</span>
                        <div class="flex items-center gap-3">
                            <a
                                href="https://github.com/albertobadia/liensign"
                                class="hover:text-blue-600 transition-colors"
                                title="Repository"
                            >
                                <svg
                                    class="h-5 w-5"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                    aria-hidden="true"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                                        clip-rule="evenodd"></path>
                                </svg>
                            </a>
                            <a
                                href="https://www.linkedin.com/in/alberto-badia/"
                                class="hover:text-blue-600 transition-colors"
                                title="LinkedIn"
                            >
                                <svg
                                    class="h-5 w-5"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                    aria-hidden="true"
                                >
                                    <path
                                        d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.761 0 5-2.239 5-5v-14c0-2.761-2.239-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                                    ></path>
                                </svg>
                            </a>
                            <a
                                href="mailto:alberto_badia@enlacepatagonia.com"
                                class="hover:text-blue-600 transition-colors"
                                title="Email"
                            >
                                <svg
                                    class="h-5 w-5"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    stroke-width="2"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                    ></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <Toaster client:load position="bottom-right" expand={true} richColors />
    </body>
</html>
