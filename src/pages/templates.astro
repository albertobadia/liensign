---
import Layout from "../layouts/Layout.astro";
import { WAIVER_TEMPLATES } from "../lib/templates";

const _states = Object.entries(WAIVER_TEMPLATES);
---

<Layout title="Legal Waiver Templates">
    <section class="py-24 bg-white">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2
                    class="text-4xl font-extrabold text-slate-900 sm:text-5xl font-serif"
                >
                    Professional Templates
                </h2>
                <p class="mt-4 text-xl text-slate-600">
                    Legally verified for regional requirements.
                </p>
            </div>

            <div class="grid grid-cols-1 gap-12 md:grid-cols-2">
                {
                    _states.map(([code, state]) => (
                        <div class="border border-slate-200 rounded-3xl p-8 bg-slate-50/50">
                            <div class="flex flex-col sm:flex-row sm:items-start justify-between gap-6 mb-8">
                                <div class="space-y-1">
                                    <h3 class="text-3xl font-bold text-slate-900 font-serif lowercase first-letter:uppercase">
                                        {state.name}
                                    </h3>
                                    <div class="flex items-center gap-2 text-[10px] text-slate-500 font-medium tracking-tight">
                                        <span>
                                            Verified: {state.lastVerified}
                                        </span>
                                        <span class="w-1 h-1 rounded-full bg-slate-300" />
                                        <a
                                            href={state.sourceUrl}
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="text-blue-600 hover:text-blue-800 transition-colors flex items-center gap-0.5"
                                        >
                                            Official Source
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="10"
                                                height="10"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                class="mb-0.5"
                                            >
                                                <>
                                                    <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                                                    <polyline points="15 3 21 3 21 9" />
                                                    <line
                                                        x1="10"
                                                        y1="14"
                                                        x2="21"
                                                        y2="3"
                                                    />
                                                </>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                                <span class="inline-flex text-[10px] font-bold text-blue-700 bg-blue-50 border border-blue-100 px-3 py-1.5 rounded-full tracking-wider uppercase whitespace-normal sm:max-w-[200px] leading-tight text-left sm:text-right self-start">
                                    {state.statute}
                                </span>
                            </div>

                            <div class="space-y-4">
                                {Object.entries(state.forms).map(
                                    ([type, form]) => (
                                        <div class="bg-white p-5 rounded-2xl border border-slate-100 shadow-sm hover:border-blue-400 hover:shadow-md transition-all group flex flex-col sm:flex-row sm:items-center justify-between gap-4">
                                            <div class="flex-1 min-w-0 text-left">
                                                <div class="flex items-center gap-2 mb-1">
                                                    <span class="w-1.5 h-1.5 rounded-full bg-blue-500" />
                                                    <h4 class="font-extrabold text-slate-400 text-[10px] uppercase tracking-[0.2em]">
                                                        {type.replace(
                                                            /_/g,
                                                            " ",
                                                        )}
                                                    </h4>
                                                </div>
                                                <p class="text-sm text-slate-700 font-semibold leading-relaxed tracking-tight">
                                                    {form.title}
                                                </p>
                                            </div>
                                            <a
                                                href="/wizard"
                                                class="inline-flex items-center justify-center rounded-xl bg-slate-900 px-4 py-2 text-[11px] font-bold text-white opacity-100 sm:opacity-0 group-hover:opacity-100 transition-all hover:bg-blue-600 whitespace-nowrap active:scale-95 shadow-sm"
                                            >
                                                Use Template
                                            </a>
                                        </div>
                                    ),
                                )}
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>
</Layout>
