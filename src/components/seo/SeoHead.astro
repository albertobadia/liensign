---
interface Props {
	title: string;
	description: string;
	image?: string;
	type?: "website" | "article";
	jsonLd?: Record<string, unknown>;
}

import { getCanonicalURL, getSocialImageURL } from "../../lib/seo";

const {
	title,
	description,
	image = "/og-image.png",
	type = "website",
	jsonLd,
} = Astro.props;

const canonicalURL = getCanonicalURL(Astro.url.pathname, Astro.site);
const socialImageURL = getSocialImageURL(image, Astro.site);
---

<!-- Global Metadata -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg?v=2" />
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title} | LienSign</title>
<meta name="title" content={`${title} | LienSign`} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={`${title} | LienSign`} />
<meta property="og:description" content={description} />
<meta property="og:image" content={socialImageURL} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={`${title} | LienSign`} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={socialImageURL} />

<!-- JSON-LD Structured Data -->
{
	jsonLd && (
		<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
	)
}

<!-- Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
	href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Outfit:wght@700;800&display=swap"
	rel="stylesheet"
/>
